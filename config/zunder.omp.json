{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "final_space": true,
    "console_title_template": "{{.PWD}}",
        "secondary_prompt": {
        "foreground": "black",
        "template": "· "
    },
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "yellow",
                    "template": "{{ if .WSL }}<b>WSL</b> {{ end }}"
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "cyan",
                    "template": "<b>{{ .Path }}{{ if not .Writable }} <red>󰌾</>{{ end }}</b>",
                    "properties": {
                        "style": "full"
                    }
                },
                {
                    "type": "git",
                    "style": "plain",
                    "template": " on <b><magenta>{{ .HEAD }}</>{{ if .Working.Changed }} <red>{{ .Working.String }}</>{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} <blue>{{ .Staging.String }}</>{{ end }}</b>",
                    "properties": {
                        "fetch_status": true,
                        "branch_icon": "\ue0a0 "
                    }
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "green",
                    "template": "{{ if .Env.CONDA_DEFAULT_ENV }} <b>({{ .Env.CONDA_DEFAULT_ENV }})</b>{{ end }}"
                },
                {
                    "type": "executiontime",
                    "style": "plain",
                    "template": " took <b><yellow>{{ .FormattedMs }}</></b>",
                    "properties": {
                        "threshold": 3000,
                        "style": "round"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "green",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}red{{ end }}"
                    ],
                    "template": "\u276f"
                }
            ]
        }
    ]
}
